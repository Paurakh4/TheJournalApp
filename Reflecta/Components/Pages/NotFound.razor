@page "/not-found"
@layout MainLayout
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>Page Not Found - Reflecta</PageTitle>

<div class="min-h-[60vh] flex flex-col items-center justify-center text-center">
    <div class="w-24 h-24 rounded-full bg-surface-elevated flex items-center justify-center mb-6">
        <span class="material-symbols-rounded text-5xl text-text-muted">explore_off</span>
    </div>
    
    <h1 class="text-3xl font-bold text-text-primary mb-2">Page Not Found</h1>
    <p class="text-text-secondary max-w-md mb-8">
        Oops! The page you're looking for doesn't exist or has been moved.
    </p>
    
    <div class="flex gap-3">
        <a href="/" class="btn-pill">
            <span class="material-symbols-rounded">home</span>
            Go Home
        </a>
        <button @onclick="GoBack" class="btn-pill-secondary">
            <span class="material-symbols-rounded">arrow_back</span>
            Go Back
        </button>
    </div>
</div>

@code {
    private async Task GoBack()
    {
        await JSRuntime.InvokeVoidAsync("history.back");
    }
}