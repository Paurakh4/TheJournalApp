@* Modal.razor - Modal Dialog Component *@

@if (IsOpen)
{
    <div class="modal-backdrop" @onclick="HandleBackdropClick">
        <div class="modal-content @SizeClass" @onclick:stopPropagation>
            @* Header *@
            @if (!string.IsNullOrEmpty(Title) || ShowCloseButton)
            {
                <header class="flex items-center justify-between mb-4">
                    @if (!string.IsNullOrEmpty(Title))
                    {
                        <h2 class="text-lg font-semibold text-text-primary">@Title</h2>
                    }
                    else
                    {
                        <div></div>
                    }
                    
                    @if (ShowCloseButton)
                    {
                        <button type="button" 
                                class="btn-pill-ghost p-2"
                                @onclick="Close">
                            <span class="material-symbols-rounded">close</span>
                        </button>
                    }
                </header>
            }
            
            @* Body *@
            <div class="@BodyClass">
                @ChildContent
            </div>
            
            @* Footer *@
            @if (FooterContent != null)
            {
                <footer class="flex items-center justify-end gap-3 mt-6 pt-4 border-t border-border-subtle">
                    @FooterContent
                </footer>
            }
        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; } = false;
    [Parameter] public EventCallback<bool> IsOpenChanged { get; set; }
    [Parameter] public string? Title { get; set; }
    [Parameter] public bool ShowCloseButton { get; set; } = true;
    [Parameter] public bool CloseOnBackdropClick { get; set; } = true;
    [Parameter] public ModalSize Size { get; set; } = ModalSize.Medium;
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public RenderFragment? FooterContent { get; set; }
    [Parameter] public string? BodyClass { get; set; }

    public enum ModalSize { Small, Medium, Large, FullScreen }

    private string SizeClass => Size switch
    {
        ModalSize.Small => "max-w-sm",
        ModalSize.Medium => "max-w-md",
        ModalSize.Large => "max-w-2xl",
        ModalSize.FullScreen => "max-w-full w-full h-full rounded-none",
        _ => "max-w-md"
    };

    private async Task Close()
    {
        IsOpen = false;
        await IsOpenChanged.InvokeAsync(IsOpen);
    }

    private async Task HandleBackdropClick()
    {
        if (CloseOnBackdropClick)
        {
            await Close();
        }
    }
}
