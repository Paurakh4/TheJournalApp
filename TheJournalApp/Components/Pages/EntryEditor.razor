        flex-wrap: wrap;
        gap: 0.625rem;
    }
    
    .chip-btn {
        padding: 0.625rem 1.125rem;
        font-size: 0.875rem;
        font-weight: 600;
        background: #FFFFFF;
        border: 1.5px solid #E2E8F0;
        border-radius: 50px;
        color: #64748B;
        cursor: pointer;
        transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .chip-btn:hover {
        border-color: #94A3B8;
        background: #F8FAFC;
        transform: translateY(-1px);
    }
    
    .chip-btn.selected {
        background: linear-gradient(135deg, #EEF2FF 0%, #E0E7FF 100%);
        border-color: #6366F1;
        color: #6366F1;
        box-shadow: 0 2px 8px rgba(99, 102, 241, 0.12);
    }
    
    .content-section {
        padding-bottom: 0;
    }
    
    .editor-toolbar {
        display: flex;
        gap: 0.375rem;
        padding: 0.75rem 1rem;
        background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
        border-radius: 12px 12px 0 0;
        border: 1.5px solid #E2E8F0;
        border-bottom: none;
    }
    
    .toolbar-btn {
        padding: 0.5rem 0.875rem;
        background: none;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        color: #64748B;
        font-size: 0.9375rem;
        font-weight: 600;
