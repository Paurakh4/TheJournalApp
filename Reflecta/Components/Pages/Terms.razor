@page "/terms"

<PageTitle>Terms of Service - Reflecta</PageTitle>

<div class="max-w-5xl mx-auto space-y-6">
    @* Header *@
    <header class="flex items-center gap-4">
        <a href="/settings" class="btn-icon">
            <span class="material-symbols-rounded">arrow_back</span>
        </a>
        <div>
            <h1 class="text-2xl md:text-3xl font-bold text-text-primary">Terms of Service</h1>
            <p class="text-text-secondary">Usage guidelines</p>
        </div>
    </header>
    
    @* Coming Soon Card *@
    <section class="card-elevated text-center py-12">
        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-accent-primary/20 mb-6">
            <span class="material-symbols-rounded text-4xl text-accent-primary">gavel</span>
        </div>
        
        <h2 class="text-xl font-semibold text-text-primary mb-2">Terms of Service Coming Soon</h2>
        <p class="text-text-secondary max-w-md mx-auto mb-6">
            We're preparing our terms of service document. Reflecta is a personal journaling app designed to help you reflect and grow.
        </p>
        
        <div class="bg-surface-container rounded-2xl p-4 max-w-sm mx-auto">
            <h3 class="font-medium text-text-primary mb-2">What to Expect</h3>
            <ul class="text-sm text-text-secondary text-left space-y-2">
                <li class="flex items-start gap-2">
                    <span class="material-symbols-rounded text-accent-primary text-lg">description</span>
                    Clear, readable language
                </li>
                <li class="flex items-start gap-2">
                    <span class="material-symbols-rounded text-accent-primary text-lg">description</span>
                    User rights and responsibilities
                </li>
                <li class="flex items-start gap-2">
                    <span class="material-symbols-rounded text-accent-primary text-lg">description</span>
                    Data ownership clarity
                </li>
                <li class="flex items-start gap-2">
                    <span class="material-symbols-rounded text-accent-primary text-lg">description</span>
                    App usage guidelines
                </li>
            </ul>
        </div>
    </section>
    
    @* Future Enhancement Note *@
    <div class="text-center text-sm text-text-muted">
        <span class="material-symbols-rounded text-lg align-middle mr-1">schedule</span>
        Full terms of service will be available in a future update
    </div>
</div>
