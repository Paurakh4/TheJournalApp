@page "/editor"
@page "/editor/{EntryId:int}"
@using TheJournalApp.Services
@using TheJournalApp.Data.Entities
@inject JournalService JournalService
@inject NavigationManager NavigationManager

<div class="editor-page">
    <!-- Top Bar -->
    <div class="editor-header">
        <div class="header-left">
            <span class="date-badge">ðŸ“… @entryDate.ToString("dddd, MMMM d, yyyy")</span>
        </div>
        <div class="header-actions">
            <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
            <button class="btn btn-primary" @onclick="SaveEntry">Save Entry</button>
        </div>
    </div>
    
    <!-- Mood Section -->
    <div class="card editor-section">
        <h3 class="section-title">Primary Mood <span class="required">*</span></h3>
        <p class="section-description">How are you feeling overall today?</p>
        
        <div class="mood-selector">
            @foreach (var mood in _allMoods)
            {
                <button type="button" 
                        class="mood-option @(selectedPrimaryMoodId == mood.MoodId ? "selected" : "")"
                        @onclick="() => selectedPrimaryMoodId = mood.MoodId">
                    <span class="mood-emoji">@mood.Emoji</span>
                    <span class="mood-label">@mood.Name</span>
                </button>
            }
        </div>
    </div>
    
    <div class="card editor-section">
        <h3 class="section-title">Secondary Moods <span class="optional">(Optional - Max 2)</span></h3>
        <p class="section-description">Any other emotions you're experiencing?</p>
        
        <div class="secondary-moods">
            @foreach (var mood in _allMoods.Where(m => m.MoodId != selectedPrimaryMoodId))
            {
                <button type="button" 
                        class="chip-btn @(selectedSecondaryMoodIds.Contains(mood.MoodId) ? "selected" : "")"
                        @onclick="() => ToggleSecondaryMood(mood.MoodId)">
                    @mood.Emoji @mood.Name
                </button>
            }
        </div>
    </div>
    
    <!-- Content Area -->
    <div class="card editor-section content-section">
        <h3 class="section-title">What's on your mind?</h3>
        
        <div class="editor-toolbar">
            <button class="toolbar-btn" title="Bold" @onclick="@(() => ApplyFormat("bold"))">
                <strong>B</strong>
            </button>
            <button class="toolbar-btn" title="Italic" @onclick="@(() => ApplyFormat("italic"))">
                <em>I</em>
            </button>
            <button class="toolbar-btn" title="List" @onclick="@(() => ApplyFormat("list"))">
                â˜°
            </button>
        </div>
        
        <textarea class="editor-content" 
                  @bind="entryContent" 
                  placeholder="Start writing about your day..."></textarea>
    </div>
    
    <!-- Tagging Section -->
    <div class="card editor-section">
        <h3 class="section-title">Tags</h3>
        <p class="section-description">Categorize your entry for easy searching later</p>
        
        <div class="tag-input-container">
            <div class="selected-tags">
                @foreach (var tag in selectedTags)
                {
                    <span class="chip">
                        @tag.Name
                        <button type="button" class="chip-remove" @onclick="() => RemoveTag(tag)">Ã—</button>
                    </span>
                }
            </div>
            
            <div class="tag-input-wrapper">
                <input type="text" 
                       class="form-input"
                       placeholder="Type to add a tag..."
                       @bind="tagInput"
                       @bind:event="oninput"
                       @onkeydown="HandleTagKeyDown" />
                
                @if (!string.IsNullOrWhiteSpace(tagInput))
                {
                    <div class="tag-suggestions">
                        @foreach (var suggestion in GetFilteredTags())
                        {
                            <button type="button" 
                                    class="tag-suggestion" 
                                    @onclick="() => AddTag(suggestion)">
                                @suggestion.Name
                            </button>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
