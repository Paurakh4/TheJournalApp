@page "/settings"
@using TheJournalApp.Services
@using TheJournalApp.Data.Entities
@inject JournalService JournalService

<div class="settings-page">
    <div class="page-header">
        <h1 class="page-title">Settings</h1>
        <p class="page-subtitle">Customize your journal experience</p>
    </div>
    
    <div class="settings-container">
        <!-- Appearance Section -->
        <div class="card settings-card">
            <h3 class="settings-section-title">
                <span class="section-icon">üé®</span>
                Appearance
            </h3>
            
            <div class="settings-item">
                <div class="settings-item-info">
                    <div class="settings-item-label">Dark Mode</div>
                    <div class="settings-item-description">Switch between light and dark themes</div>
                </div>
                <label class="toggle">
                    <input type="checkbox" @bind="isDarkMode" />
                    <span class="toggle-slider"></span>
                </label>
            </div>
            
            <div class="settings-item">
                <div class="settings-item-info">
                    <div class="settings-item-label">Compact View</div>
                    <div class="settings-item-description">Show more entries in the list view</div>
                </div>
                <label class="toggle">
                    <input type="checkbox" @bind="isCompactView" />
                    <span class="toggle-slider"></span>
                </label>
            </div>
        </div>
        
        <!-- Security Section -->
        <div class="card settings-card">
            <h3 class="settings-section-title">
                <span class="section-icon">üîí</span>
                Security
            </h3>
            
            <div class="settings-item">
                <div class="settings-item-info">
                    <div class="settings-item-label">App PIN</div>
                    <div class="settings-item-description">Protect your journal with a PIN code</div>
                </div>
                <button class="btn btn-secondary" @onclick="SetAppPin">
                    @(hasPinSet ? "Change PIN" : "Set PIN")
                </button>
            </div>
            
            <div class="settings-item">
                <div class="settings-item-info">
                    <div class="settings-item-label">Require PIN on Launch</div>
                    <div class="settings-item-description">Ask for PIN every time the app opens</div>
                </div>
                <label class="toggle">
                    <input type="checkbox" @bind="requirePinOnLaunch" disabled="@(!hasPinSet)" />
                    <span class="toggle-slider"></span>
                </label>
            </div>
        </div>
        
        <!-- Notifications Section -->
        <div class="card settings-card">
            <h3 class="settings-section-title">
                <span class="section-icon">üîî</span>
                Reminders
            </h3>
            
            <div class="settings-item">
                <div class="settings-item-info">
                    <div class="settings-item-label">Daily Reminder</div>
                    <div class="settings-item-description">Get reminded to journal every day</div>
                </div>
                <label class="toggle">
                    <input type="checkbox" @bind="dailyReminder" />
                    <span class="toggle-slider"></span>
                </label>
            </div>
            
            @if (dailyReminder)
            {
                <div class="settings-item">
                    <div class="settings-item-info">
                        <div class="settings-item-label">Reminder Time</div>
                        <div class="settings-item-description">When should we remind you?</div>
                    </div>
                    <input type="time" class="form-input time-input" @bind="reminderTime" />
                </div>
            }
        </div>
        
        <!-- Data Management Section -->
        <div class="card settings-card">
            <h3 class="settings-section-title">
                <span class="section-icon">üíæ</span>
                Data Management
            </h3>
            
            <div class="settings-item">
                <div class="settings-item-info">
                    <div class="settings-item-label">Export Journal</div>
                    <div class="settings-item-description">Download your entries as a PDF file</div>
                </div>
                <button class="btn btn-secondary" @onclick="ShowExportDialog">
                    Export to PDF
                </button>
            </div>
            
            @if (showExportOptions)
            {
                <div class="export-options">
                    <div class="date-range-picker">
                        <div class="date-input-group">
                            <label class="form-label">Start Date</label>
                            <input type="date" class="form-input" @bind="exportStartDate" />
                        </div>
                        <div class="date-input-group">
                            <label class="form-label">End Date</label>
                            <input type="date" class="form-input" @bind="exportEndDate" />
                        </div>
                    </div>
                    <div class="export-actions">
                        <button class="btn btn-primary" @onclick="ExportToPdf">
                            Generate PDF
                        </button>
                        <button class="btn btn-ghost" @onclick="() => showExportOptions = false">
                            Cancel
                        </button>
                    </div>
                </div>
            }
            
            <div class="settings-item">
                <div class="settings-item-info">
                    <div class="settings-item-label">Backup Data</div>
                    <div class="settings-item-description">Create a backup of all your journal data</div>
                </div>
                <button class="btn btn-secondary" @onclick="BackupData">
                    Create Backup
                </button>
            </div>
            
            <div class="settings-divider"></div>
            
            <div class="settings-item danger">
                <div class="settings-item-info">
                    <div class="settings-item-label">Delete All Data</div>
                    <div class="settings-item-description">Permanently delete all your journal entries</div>
                </div>
                <button class="btn btn-danger" @onclick="DeleteAllData">
                    Delete All
                </button>
            </div>
        </div>
        
        <!-- About Section -->
        <div class="card settings-card">
            <h3 class="settings-section-title">
                <span class="section-icon">‚ÑπÔ∏è</span>
                About
            </h3>
            
            <div class="about-info">
                <div class="about-row">
                    <span class="about-label">Version</span>
                    <span class="about-value">1.0.0</span>
                </div>
                <div class="about-row">
                    <span class="about-label">Build</span>
                    <span class="about-value">2024.12.20</span>
                </div>
            </div>
            
            <div class="about-links">
                <a href="#" class="about-link">Privacy Policy</a>
                <a href="#" class="about-link">Terms of Service</a>
                <a href="#" class="about-link">Send Feedback</a>
            </div>
        </div>
    </div>
</div>

<style>
    .settings-page {
        max-width: 720px;
        animation: fadeInUp 0.4s ease-out;
    }
    
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(16px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .settings-container {
        display: flex;
        flex-direction: column;
        gap: 1.75rem;
    }
    
    .settings-card {
        padding: 1.75rem;
        background: linear-gradient(135deg, #FFFFFF 0%, #FAFBFC 100%);
    }
    
    .settings-section-title {
        display: flex;
        align-items: center;
        gap: 0.875rem;
        font-size: 1.125rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #E2E8F0;
        letter-spacing: -0.01em;
    }
    
    .section-icon {
        font-size: 1.375rem;
        filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.1));
    }
    
    .settings-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1.125rem 0;
        border-bottom: 1px solid #F1F5F9;
        transition: background-color 200ms ease;
    }
    
    .settings-item:last-child {
        border-bottom: none;
    }
    
    .settings-item.danger .settings-item-label {
        color: #F43F5E;
    }
    
    .settings-item-info {
        flex: 1;
    }
    
    .settings-item-label {
        font-weight: 600;
        color: #0F172A;
        margin-bottom: 0.375rem;
        letter-spacing: -0.01em;
    }
    
    .settings-item-description {
        font-size: 0.875rem;
        color: #64748B;
        line-height: 1.5;
    }
    
    .toggle {
        position: relative;
        width: 52px;
        height: 28px;
        display: inline-block;
    }
    
    .toggle input {
        opacity: 0;
        width: 0;
        height: 0;
    }
    
    .toggle-slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: #CBD5E1;
        border-radius: 28px;
        transition: all 250ms cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .toggle-slider::before {
        position: absolute;
        content: "";
        height: 22px;
        width: 22px;
        left: 3px;
        bottom: 3px;
        background: #FFFFFF;
        border-radius: 50%;
        box-shadow: 0 2px 4px rgba(15, 23, 42, 0.1);
        transition: all 250ms cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .toggle input:checked + .toggle-slider {
        background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
    }
    
    .toggle input:checked + .toggle-slider::before {
        transform: translateX(24px);
    }
    
    .toggle input:focus + .toggle-slider {
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
    }
    
    .toggle input:disabled + .toggle-slider {
        opacity: 0.5;
        cursor: not-allowed;
    }
    
    .time-input {
        width: 150px;
        padding: 0.625rem 1rem;
        border: 1.5px solid #E2E8F0;
        border-radius: 10px;
        font-size: 0.9375rem;
        transition: all 200ms ease;
    }
    
    .time-input:hover {
        border-color: #94A3B8;
    }
    
    .time-input:focus {
        outline: none;
        border-color: #6366F1;
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.12);
    }
    
    .export-options {
        background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
        border-radius: 12px;
        padding: 1.25rem;
        margin: 1.25rem 0;
        border: 1px solid #E2E8F0;
    }
    
    .date-range-picker {
        display: flex;
        gap: 1.25rem;
        margin-bottom: 1.25rem;
    }
    
    .date-input-group {
        flex: 1;
    }
    
    .date-input-group .form-label {
        font-weight: 600;
        color: #475569;
        margin-bottom: 0.5rem;
    }
    
    .date-input-group .form-input {
        border-radius: 10px;
    }
    
    .export-actions {
        display: flex;
        gap: 0.875rem;
        justify-content: flex-end;
    }
    
    .settings-divider {
        height: 1px;
        background: linear-gradient(90deg, transparent, #E2E8F0, transparent);
        margin: 0.75rem 0;
    }
    
    .about-info {
        margin-bottom: 1.25rem;
    }
    
    .about-row {
        display: flex;
        justify-content: space-between;
        padding: 0.625rem 0;
        border-bottom: 1px solid #F8FAFC;
    }
    
    .about-row:last-child {
        border-bottom: none;
    }
    
    .about-label {
        color: #64748B;
        font-weight: 500;
    }
    
    .about-value {
        font-weight: 700;
        color: #0F172A;
    }
    
    .about-links {
        display: flex;
        gap: 2rem;
        padding-top: 1.25rem;
        border-top: 1px solid #F1F5F9;
        flex-wrap: wrap;
    }
    
    .about-link {
        font-size: 0.875rem;
        font-weight: 600;
        color: #6366F1;
        text-decoration: none;
        transition: all 200ms ease;
    }
    
    .about-link:hover {
        color: #4F46E5;
        text-decoration: underline;
    }
    
    @@media (max-width: 640px) {
        .settings-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }
        
        .date-range-picker {
            flex-direction: column;
            gap: 1rem;
        }
        
        .export-actions {
            justify-content: stretch;
        }
        
        .export-actions .btn {
            flex: 1;
        }
        
        .about-links {
            gap: 1.25rem;
        }
    }
</style>

@code {
    private bool isDarkMode = false;
    private bool isCompactView = false;
    private bool hasPinSet = false;
    private bool requirePinOnLaunch = false;
    private bool dailyReminder = true;
    private TimeOnly reminderTime = new TimeOnly(20, 0);
    private bool showExportOptions = false;
    private DateTime exportStartDate = DateTime.Today.AddMonths(-1);
    private DateTime exportEndDate = DateTime.Today;
    private bool _isLoading = true;
    
    protected override async Task OnInitializedAsync()
    {
        await JournalService.EnsureUserExistsAsync();
        var settings = await JournalService.GetUserSettingsAsync();
        if (settings != null)
        {
            isDarkMode = settings.IsDarkMode;
            hasPinSet = !string.IsNullOrEmpty(settings.AppPin);
        }
        _isLoading = false;
    }
    
    private async Task SetAppPin()
    {
        // Show PIN setup dialog
        hasPinSet = true;
        await JournalService.SaveUserSettingsAsync(isDarkMode, "1234"); // Demo PIN
    }
    
    private void ShowExportDialog()
    {
        showExportOptions = !showExportOptions;
    }
    
    private void ExportToPdf()
    {
        // Export logic
        showExportOptions = false;
    }
    
    private void BackupData()
    {
        // Backup logic
    }
    
    private async Task DeleteAllData()
    {
        await JournalService.DeleteAllDataAsync();
    }
    
    private async Task OnDarkModeChanged(ChangeEventArgs e)
    {
        isDarkMode = (bool)(e.Value ?? false);
        await JournalService.SaveUserSettingsAsync(isDarkMode, null);
    }
}
