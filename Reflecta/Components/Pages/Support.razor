@page "/support"

<PageTitle>Help & Support - Reflecta</PageTitle>

<div class="max-w-5xl mx-auto space-y-6">
    @* Header *@
    <header class="flex items-center gap-4">
        <a href="/settings" class="btn-icon">
            <span class="material-symbols-rounded">arrow_back</span>
        </a>
        <div>
            <h1 class="text-2xl md:text-3xl font-bold text-text-primary">Help & Support</h1>
            <p class="text-text-secondary">We're here to help</p>
        </div>
    </header>
    
    @* Coming Soon Card *@
    <section class="card-elevated text-center py-12">
        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-accent-primary/20 mb-6">
            <span class="material-symbols-rounded text-4xl text-accent-primary">support_agent</span>
        </div>
        
        <h2 class="text-xl font-semibold text-text-primary mb-2">Support Center Coming Soon</h2>
        <p class="text-text-secondary max-w-md mx-auto mb-6">
            We're building a comprehensive help center with FAQs, tutorials, and support options.
        </p>
        
        <div class="bg-surface-container rounded-2xl p-4 max-w-sm mx-auto">
            <h3 class="font-medium text-text-primary mb-2">Planned Features</h3>
            <ul class="text-sm text-text-secondary text-left space-y-2">
                <li class="flex items-start gap-2">
                    <span class="material-symbols-rounded text-accent-primary text-lg">help</span>
                    Frequently Asked Questions
                </li>
                <li class="flex items-start gap-2">
                    <span class="material-symbols-rounded text-accent-primary text-lg">school</span>
                    Getting Started Guide
                </li>
                <li class="flex items-start gap-2">
                    <span class="material-symbols-rounded text-accent-primary text-lg">tips_and_updates</span>
                    Tips & Best Practices
                </li>
                <li class="flex items-start gap-2">
                    <span class="material-symbols-rounded text-accent-primary text-lg">email</span>
                    Contact Support
                </li>
            </ul>
        </div>
    </section>
    
    @* Quick Tips *@
    <section class="card-elevated">
        <h2 class="text-lg font-semibold text-text-primary mb-4">Quick Tips</h2>
        
        <div class="space-y-3">
            <div class="flex items-start gap-3 p-3 rounded-xl bg-surface-container">
                <span class="material-symbols-rounded text-accent-primary">lightbulb</span>
                <div>
                    <h3 class="font-medium text-text-primary text-sm">Daily Journaling</h3>
                    <p class="text-xs text-text-muted">Try to write at least a few sentences each day to build the habit.</p>
                </div>
            </div>
            
            <div class="flex items-start gap-3 p-3 rounded-xl bg-surface-container">
                <span class="material-symbols-rounded text-accent-primary">lightbulb</span>
                <div>
                    <h3 class="font-medium text-text-primary text-sm">Use Tags</h3>
                    <p class="text-xs text-text-muted">Tags help you organize and find entries later. Create custom tags for your needs.</p>
                </div>
            </div>
            
            <div class="flex items-start gap-3 p-3 rounded-xl bg-surface-container">
                <span class="material-symbols-rounded text-accent-primary">lightbulb</span>
                <div>
                    <h3 class="font-medium text-text-primary text-sm">Track Your Mood</h3>
                    <p class="text-xs text-text-muted">Mood tracking helps you identify patterns and understand your emotional health.</p>
                </div>
            </div>
        </div>
    </section>
    
    @* Future Enhancement Note *@
    <div class="text-center text-sm text-text-muted">
        <span class="material-symbols-rounded text-lg align-middle mr-1">schedule</span>
        Full support center will be available in a future update
    </div>
</div>
