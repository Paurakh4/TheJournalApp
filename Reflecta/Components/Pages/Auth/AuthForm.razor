@using Reflecta.Services.Interfaces
@using Reflecta.Auth

@inject IAuthService AuthService
@inject ISettingsService SettingsService
@inject ILockService LockService
@inject ReflectaAuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager

<div class="w-full max-w-md mx-auto animate-fade-in">
    @* Logo & Welcome *@
    <header class="text-center mb-10">
        <div class="w-20 h-20 mx-auto mb-6 rounded-3xl bg-accent-primary/20 flex items-center justify-center">
            <img src="assets/reflecta-logo.svg" alt="Reflecta logo" class="w-12 h-12" />
        </div>
        <h1 class="text-3xl font-bold text-text-primary mb-2">
            @(IsLoginMode ? "Welcome back" : "Create account")
        </h1>
        <p class="text-text-secondary">
            @(IsLoginMode ? "Sign in to continue your journaling journey" : "Start your journaling journey today")
        </p>
    </header>
    
    @* Auth Form *@
    <form class="flex flex-col gap-4" @onsubmit="HandleSubmit" @onsubmit:preventDefault>
        @if (!IsLoginMode)
        {
            <SolidInput 
                Label="Username"
                Placeholder="johndoe"
                Icon="person"
                @bind-Value="_username"
                ErrorMessage="@_usernameError"
                Disabled="_isLoading" />
        }
        
        <SolidInput 
            Label="Email"
            Placeholder="your@email.com"
            InputType="email"
            Icon="mail"
            @bind-Value="_email"
            ErrorMessage="@_emailError"
            Disabled="_isLoading" />
        
        <SolidInput 
            Label="Password"
            Placeholder="@(IsLoginMode ? "Enter your password" : "Create a strong password")"
            InputType="password"
            Icon="lock"
            @bind-Value="_password"
            HelperText="@(IsLoginMode ? null : "At least 6 characters")"
            ErrorMessage="@_passwordError"
            Disabled="_isLoading" />
        
        @if (!IsLoginMode)
        {
            <SolidInput 
                Label="Confirm Password"
                Placeholder="Confirm your password"
                InputType="password"
                Icon="lock"
                @bind-Value="_confirmPassword"
                ErrorMessage="@_confirmPasswordError"
                Disabled="_isLoading" />
        }
        
        @if (IsLoginMode)
        {
            <div class="flex items-center justify-between mt-2">
                <label class="flex items-center gap-2 cursor-pointer">
                    <input type="checkbox" 
                           class="w-5 h-5 rounded-lg bg-surface-elevated border-none accent-accent-primary" 
                           @bind="_rememberMe"
                           disabled="@_isLoading" />
                    <span class="text-sm text-text-secondary">Remember me</span>
                </label>
                
                <a href="/forgot-password" class="text-sm text-accent-primary hover:underline">
                    Forgot password?
                </a>
            </div>
        }
        else
        {
            <label class="flex items-start gap-3 mt-2 cursor-pointer">
                <input type="checkbox" 
                       class="w-5 h-5 mt-0.5 rounded-lg bg-surface-elevated border-none accent-accent-primary" 
                       @bind="_acceptTerms"
                       disabled="@_isLoading" />
                <span class="text-sm text-text-secondary">
                    I agree to the <a href="/terms" class="text-accent-primary hover:underline">Terms of Service</a> 
                    and <a href="/privacy" class="text-accent-primary hover:underline">Privacy Policy</a>
                </span>
            </label>
        }
        
        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="bg-mood-negative/20 text-mood-negative px-4 py-3 rounded-2xl text-sm flex items-center gap-2 animate-fade-in">
                <span class="material-symbols-rounded text-lg">error</span>
                @_errorMessage
            </div>
        }
        
        @if (!string.IsNullOrEmpty(_successMessage))
        {
            <div class="bg-mood-positive/20 text-mood-positive px-4 py-3 rounded-2xl text-sm flex items-center gap-2 animate-fade-in">
                <span class="material-symbols-rounded text-lg">check_circle</span>
                @_successMessage
            </div>
        }
        
        <PillButton 
            Type="submit"
            Text="@GetSubmitButtonText()"
            Icon="@(IsLoginMode ? "login" : "person_add")"
            Size="PillButton.ButtonSize.Large"
            Disabled="@(_isLoading || (!IsLoginMode && !_acceptTerms))"
            AdditionalClasses="w-full mt-4" />
    </form>
    
    @* Divider *@
    <div class="flex items-center gap-4 my-8">
        <div class="flex-1 h-px bg-border-subtle"></div>
        <span class="text-sm text-text-muted">@(IsLoginMode ? "or continue with" : "or sign up with")</span>
        <div class="flex-1 h-px bg-border-subtle"></div>
    </div>
    
    @* Social Login *@
    <div class="flex gap-3">
        <button type="button" class="btn-pill-secondary flex-1 gap-2" disabled="@_isLoading">
            <svg class="w-5 h-5" viewBox="0 0 24 24">
                <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            Google
        </button>
        
        <button type="button" class="btn-pill-secondary flex-1 gap-2" disabled="@_isLoading">
            <svg class="w-5 h-5" viewBox="0 0 24 24">
                <path fill="currentColor" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.166 6.839 9.489.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.603-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.462-1.11-1.462-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.268 2.75 1.026A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.026 2.747-1.026.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.163 22 16.418 22 12c0-5.523-4.477-10-10-10z"/>
            </svg>
            GitHub
        </button>
    </div>
    
    @* Toggle Auth Mode Link *@
    <p class="text-center text-sm text-text-secondary mt-8">
        @if (IsLoginMode)
        {
            <span>Don't have an account? </span>
            <a href="/register" class="text-accent-primary font-medium hover:underline">Sign up</a>
        }
        else
        {
            <span>Already have an account? </span>
            <a href="/login" class="text-accent-primary font-medium hover:underline">Sign in</a>
        }
    </p>
</div>

@code {
    [Parameter]
    public bool IsLoginMode { get; set; } = true;
    
    // Form fields
    private string _username = "";
    private string _email = "";
    private string _password = "";
    private string _confirmPassword = "";
    private bool _rememberMe = false;
    private bool _acceptTerms = false;
    
    // State
    private bool _isLoading = false;
    private string? _errorMessage = null;
    private string? _successMessage = null;
    
    // Field-specific errors
    private string? _usernameError = null;
    private string? _emailError = null;
    private string? _passwordError = null;
    private string? _confirmPasswordError = null;

    private string GetSubmitButtonText()
    {
        if (_isLoading)
            return IsLoginMode ? "Signing in..." : "Creating account...";
        
        return IsLoginMode ? "Sign In" : "Create Account";
    }

    private void ClearErrors()
    {
        _errorMessage = null;
        _successMessage = null;
        _usernameError = null;
        _emailError = null;
        _passwordError = null;
        _confirmPasswordError = null;
    }

    private bool ValidateForm()
    {
        ClearErrors();
        var isValid = true;

        // Email validation
        if (string.IsNullOrWhiteSpace(_email))
        {
            _emailError = "Email is required";
            isValid = false;
        }
        else if (!IsValidEmail(_email))
        {
            _emailError = "Please enter a valid email address";
            isValid = false;
        }

        // Password validation
        if (string.IsNullOrWhiteSpace(_password))
        {
            _passwordError = "Password is required";
            isValid = false;
        }
        else if (_password.Length < 6)
        {
            _passwordError = "Password must be at least 6 characters";
            isValid = false;
        }

        if (!IsLoginMode)
        {
            // Username validation for registration
            if (string.IsNullOrWhiteSpace(_username))
            {
                _usernameError = "Username is required";
                isValid = false;
            }
            else if (_username.Length < 3)
            {
                _usernameError = "Username must be at least 3 characters";
                isValid = false;
            }
            else if (!IsValidUsername(_username))
            {
                _usernameError = "Username can only contain letters, numbers, and underscores";
                isValid = false;
            }

            // Confirm password validation
            if (string.IsNullOrWhiteSpace(_confirmPassword))
            {
                _confirmPasswordError = "Please confirm your password";
                isValid = false;
            }
            else if (_password != _confirmPassword)
            {
                _confirmPasswordError = "Passwords don't match";
                isValid = false;
            }

            // Terms validation
            if (!_acceptTerms)
            {
                _errorMessage = "Please accept the Terms of Service and Privacy Policy";
                isValid = false;
            }
        }

        return isValid;
    }

    private bool IsValidEmail(string email)
    {
        try
        {
            var addr = new System.Net.Mail.MailAddress(email);
            return addr.Address == email;
        }
        catch
        {
            return false;
        }
    }

    private bool IsValidUsername(string username)
    {
        return System.Text.RegularExpressions.Regex.IsMatch(username, @"^[a-zA-Z0-9_]+$");
    }

    private async Task HandleSubmit()
    {
        if (!ValidateForm())
            return;

        _isLoading = true;
        ClearErrors();
        StateHasChanged();

        try
        {
            if (IsLoginMode)
            {
                await HandleLogin();
            }
            else
            {
                await HandleRegister();
            }
        }
        catch
        {
            _errorMessage = "An unexpected error occurred. Please try again.";
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleLogin()
    {
        var result = await AuthService.LoginAsync(_email, _password);

        if (result.Success && result.User != null)
        {
            // Always persist session for 30 days (rememberMe is now always true internally)
            await AuthStateProvider.LoginAsync(result.User.Id, rememberMe: true);
            
            // Initialize lock service with fresh login flag (user just authenticated with password)
            // This prevents showing PIN lock immediately after password login
            await LockService.InitializeAfterFreshLoginAsync(result.User.Id);
            
            // Check if PIN is enabled
            var settings = await SettingsService.GetSettingsAsync(result.User.Id);
            if (settings != null && settings.PinEnabled && !string.IsNullOrEmpty(settings.PinHash))
            {
                // User has PIN enabled, go directly to home (they just authenticated with password)
                // Don't redirect to PIN lock - the fresh login flag in LockService handles this
                NavigationManager.NavigateTo("/", forceLoad: false);
            }
            else
            {
                // No PIN set up yet - redirect to mandatory PIN setup
                NavigationManager.NavigateTo("/pin-setup?Required=true", forceLoad: false);
            }
        }
        else
        {
            _errorMessage = result.Message;
        }
    }

    private async Task HandleRegister()
    {
        var result = await AuthService.RegisterAsync(_username, _email, _password);

        if (result.Success && result.User != null)
        {
            _successMessage = "Account created successfully!";
            StateHasChanged();
            
            // Small delay to show success message
            await Task.Delay(500);
            
            // Auto-login after registration (always remember for new accounts)
            await AuthStateProvider.LoginAsync(result.User.Id, rememberMe: true);
            
            // Navigate to PIN setup for new users
            NavigationManager.NavigateTo("/pin-setup", forceLoad: false);
        }
        else
        {
            // Map error to specific field if possible
            if (result.Message.Contains("Username", StringComparison.OrdinalIgnoreCase))
            {
                _usernameError = result.Message;
            }
            else if (result.Message.Contains("Email", StringComparison.OrdinalIgnoreCase))
            {
                _emailError = result.Message;
            }
            else
            {
                _errorMessage = result.Message;
            }
        }
    }
}
