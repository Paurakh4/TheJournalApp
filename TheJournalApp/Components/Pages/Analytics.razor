@page "/analytics"
@using TheJournalApp.Services
@using TheJournalApp.Data.Entities
@inject JournalService JournalService

<div class="analytics-page">
    @if (_isLoading)
    {
        <div class="page-header">
            <h1 class="page-title">Analytics</h1>
            <p class="page-subtitle">Insights into your journaling habits</p>
        </div>
        <div class="loading-skeleton">
            <div class="skeleton-stats-row">
                <div class="skeleton-stat-card"></div>
                <div class="skeleton-stat-card"></div>
                <div class="skeleton-stat-card"></div>
                <div class="skeleton-stat-card"></div>
            </div>
            <div class="skeleton-charts-grid">
                <div class="skeleton-chart"></div>
                <div class="skeleton-chart"></div>
                <div class="skeleton-chart wide"></div>
            </div>
        </div>
    }
    else
    {
    <div class="page-header">
        <h1 class="page-title">Analytics</h1>
        <p class="page-subtitle">Insights into your journaling habits</p>
    </div>
    
    <!-- Streak Stats -->
    <div class="stats-row">
        <div class="card stat-card-large">
            <div class="stat-icon">üî•</div>
            <div class="stat-value">@_analytics.CurrentStreak</div>
            <div class="stat-label">Current Streak</div>
            <div class="stat-sublabel">days</div>
        </div>
        <div class="card stat-card-large">
            <div class="stat-icon">üèÜ</div>
            <div class="stat-value">@_analytics.LongestStreak</div>
            <div class="stat-label">Longest Streak</div>
            <div class="stat-sublabel">days</div>
        </div>
        <div class="card stat-card-large">
            <div class="stat-icon">üìù</div>
            <div class="stat-value">@_analytics.TotalEntries</div>
            <div class="stat-label">Total Entries</div>
            <div class="stat-sublabel">all time</div>
        </div>
        <div class="card stat-card-large">
            <div class="stat-icon">üìä</div>
            <div class="stat-value">@_analytics.AverageWordsPerEntry</div>
            <div class="stat-label">Avg. Words</div>
            <div class="stat-sublabel">per entry</div>
        </div>
    </div>
    
    <!-- Charts Grid -->
    <div class="charts-grid">
        <!-- Mood Distribution -->
        <div class="card chart-card">
            <h3 class="card-title">Mood Distribution</h3>
            <p class="card-subtitle">Your mood breakdown this month</p>
            
            <div class="mood-distribution">
                @foreach (var mood in _analytics.MoodDistribution)
                {
                    <div class="mood-bar-row">
                        <div class="mood-bar-label">
                            <span class="mood-emoji-sm">@mood.Emoji</span>
                            <span>@mood.Label</span>
                        </div>
                        <div class="mood-bar-container">
                            <div class="mood-bar @mood.ColorClass" style="width: @mood.Percentage%"></div>
                        </div>
                        <div class="mood-bar-value">@mood.Count (@mood.Percentage%)</div>
                    </div>
                }
            </div>
        </div>
        
        <!-- Top Tags -->
        <div class="card chart-card">
            <h3 class="card-title">Top Tags</h3>
            <p class="card-subtitle">Most used tags in your entries</p>
            
            <div class="top-tags">
                @foreach (var tag in _analytics.TopTags)
                {
                    <div class="tag-bar-row">
                        <div class="tag-bar-label">@tag.Name</div>
                        <div class="tag-bar-container">
                            <div class="tag-bar" style="width: @tag.Percentage%"></div>
                        </div>
                        <div class="tag-bar-value">@tag.Count</div>
                    </div>
                }
            </div>
        </div>
        
        <!-- Weekly Activity -->
        <div class="card chart-card chart-wide">
            <h3 class="card-title">Weekly Activity</h3>
            <p class="card-subtitle">Word count over the last 7 days</p>
            
            <div class="weekly-chart">
                @foreach (var day in _analytics.WeeklyActivity)
                {
                    <div class="activity-column">
                        <div class="activity-bar-wrapper">
                            <div class="activity-bar" style="height: @(day.WordCount / 5)%"></div>
                        </div>
                        <div class="activity-day">@day.DayLabel</div>
                        <div class="activity-value">@day.WordCount</div>
                    </div>
                }
            </div>
        </div>
        
        <!-- Monthly Overview -->
        <div class="card chart-card chart-wide">
            <h3 class="card-title">Monthly Overview</h3>
            <p class="card-subtitle">Your journaling consistency</p>
            
            <div class="monthly-overview">
                <div class="overview-stat">
                    <div class="overview-value">@_analytics.EntriesThisMonth</div>
                    <div class="overview-label">Entries This Month</div>
                </div>
                <div class="overview-stat">
                    <div class="overview-value">@_analytics.DaysJournaledThisMonth</div>
                    <div class="overview-label">Days Journaled</div>
                </div>
                <div class="overview-stat">
                    <div class="overview-value">@_analytics.CompletionRate%</div>
                    <div class="overview-label">Completion Rate</div>
                </div>
            </div>
            
            <div class="progress-bar-container">
                <div class="progress-bar" style="width: @_analytics.CompletionRate%"></div>
            </div>
            <div class="progress-label">@_analytics.DaysJournaledThisMonth of @DateTime.DaysInMonth(DateTime.Now.Year, DateTime.Now.Month) days</div>
        </div>
    </div>
    }
</div>

<style>
    .loading-skeleton {
        animation: skeletonFadeIn 0.3s ease;
    }
    
    @@keyframes skeletonFadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    
    .skeleton-stats-row {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem;
        margin-bottom: 2rem;
    }
    
    .skeleton-stat-card {
        height: 140px;
        background: linear-gradient(90deg, #F1F5F9 25%, #E2E8F0 50%, #F1F5F9 75%);
        background-size: 200% 100%;
        animation: shimmer 1.5s infinite;
        border-radius: 16px;
    }
    
    .skeleton-charts-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }
    
    .skeleton-chart {
        height: 250px;
        background: linear-gradient(90deg, #F1F5F9 25%, #E2E8F0 50%, #F1F5F9 75%);
        background-size: 200% 100%;
        animation: shimmer 1.5s infinite;
        border-radius: 16px;
    }
    
    .skeleton-chart.wide {
        grid-column: span 2;
    }
    
    @@keyframes shimmer {
        0% { background-position: 200% 0; }
        100% { background-position: -200% 0; }
    }
</style>



@code {
    private AnalyticsData _analytics = new();
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await JournalService.EnsureUserExistsAsync();
        _analytics = await JournalService.GetAnalyticsAsync();
        _isLoading = false;
    }
}
