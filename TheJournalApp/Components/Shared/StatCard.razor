@* StatCard Component - Generic container for analytics numbers *@

<div class="card stat-card">
    @if (!string.IsNullOrEmpty(Icon))
    {
        <div class="stat-icon">@Icon</div>
    }
    <div class="stat-value" style="@(string.IsNullOrEmpty(Color) ? "" : $"color: {Color}")">
        @Value
    </div>
    <div class="stat-label">@Label</div>
    @if (!string.IsNullOrEmpty(Subtitle))
    {
        <div class="stat-subtitle">@Subtitle</div>
    }
</div>

<style>
    .stat-card {
        text-align: center;
        padding: 1.5rem;
    }
    
    .stat-icon {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }
    
    .stat-value {
        font-size: 2.5rem;
        font-weight: 700;
        color: #4F46E5;
        line-height: 1;
        margin-bottom: 0.5rem;
    }
    
    .stat-label {
        font-size: 0.875rem;
        color: #6B7280;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
    
    .stat-subtitle {
        font-size: 0.8125rem;
        color: #9CA3AF;
        margin-top: 0.25rem;
    }
</style>

@code {
    [Parameter]
    public string Value { get; set; } = "0";
    
    [Parameter]
    public string Label { get; set; } = "";
    
    [Parameter]
    public string? Icon { get; set; }
    
    [Parameter]
    public string? Subtitle { get; set; }
    
    [Parameter]
    public string? Color { get; set; }
}
