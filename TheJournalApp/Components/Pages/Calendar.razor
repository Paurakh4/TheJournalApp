@page "/calendar"
@using TheJournalApp.Services
@using TheJournalApp.Data.Entities
@inject JournalService JournalService
@inject NavigationManager NavigationManager

<div class="calendar-page">
    @if (_isLoading)
    {
        <div class="page-header">
            <h1 class="page-title">Calendar</h1>
            <p class="page-subtitle">Visual history of your moods</p>
        </div>
        <div class="loading-skeleton">
            <div class="skeleton-nav">
                <div class="skeleton-nav-btn"></div>
                <div class="skeleton-month"></div>
                <div class="skeleton-nav-btn"></div>
            </div>
            <div class="skeleton-legend">
                <div class="skeleton-legend-item"></div>
                <div class="skeleton-legend-item"></div>
                <div class="skeleton-legend-item"></div>
                <div class="skeleton-legend-item"></div>
            </div>
            <div class="skeleton-calendar-grid">
                @for (int i = 0; i < 35; i++)
                {
                    <div class="skeleton-calendar-cell"></div>
                }
            </div>
            <div class="skeleton-stats">
                <div class="skeleton-stat"></div>
                <div class="skeleton-stat"></div>
                <div class="skeleton-stat"></div>
                <div class="skeleton-stat"></div>
            </div>
        </div>
    }
    else
    {
    <div class="page-header">
        <h1 class="page-title">Calendar</h1>
        <p class="page-subtitle">Visual history of your moods</p>
    </div>
    
    <!-- Month Navigation -->
    <div class="calendar-nav">
        <button class="btn btn-ghost" @onclick="PreviousMonth">‚Üê Previous</button>
        <h2 class="current-month">@currentDate.ToString("MMMM yyyy")</h2>
        <button class="btn btn-ghost" @onclick="NextMonth">Next ‚Üí</button>
    </div>
    
    <!-- Legend -->
    <div class="mood-legend">
        <div class="legend-item">
            <span class="legend-dot mood-bg-happy"></span>
            <span>Happy</span>
        </div>
        <div class="legend-item">
            <span class="legend-dot mood-bg-neutral"></span>
            <span>Neutral</span>
        </div>
        <div class="legend-item">
            <span class="legend-dot mood-bg-sad"></span>
            <span>Sad</span>
        </div>
        <div class="legend-item">
            <span class="legend-dot no-entry"></span>
            <span>No Entry</span>
        </div>
    </div>
    
    <!-- Calendar Grid -->
    <div class="calendar-container card">
        <div class="calendar-grid">
            <!-- Header Row -->
            @foreach (var day in daysOfWeek)
            {
                <div class="calendar-header-cell">@day</div>
            }
            
            <!-- Empty cells for padding -->
            @for (int i = 0; i < GetFirstDayOffset(); i++)
            {
                <div class="calendar-cell empty"></div>
            }
            
            <!-- Day cells -->
            @for (int day = 1; day <= GetDaysInMonth(); day++)
            {
                var currentDay = day;
                var date = new DateTime(currentDate.Year, currentDate.Month, currentDay);
                var entry = GetEntryForDate(date);
                var isToday = date.Date == DateTime.Today;
                
                <div class="calendar-cell @(entry != null ? GetMoodClass(entry) : "") @(isToday ? "today" : "")"
                     @onclick="() => OnDayClick(date, entry)">
                    <span class="calendar-day">@currentDay</span>
                    @if (entry != null)
                    {
                        <span class="calendar-mood">@entry.PrimaryMood.Emoji</span>
                    }
                </div>
            }
        </div>
    </div>
    
    <!-- Stats Summary -->
    <div class="calendar-stats">
        <div class="card stat-mini">
            <div class="stat-mini-value">@GetMoodCount(MoodCategory.Positive)</div>
            <div class="stat-mini-label">üòä Happy Days</div>
        </div>
        <div class="card stat-mini">
            <div class="stat-mini-value">@GetMoodCount(MoodCategory.Neutral)</div>
            <div class="stat-mini-label">üòê Neutral Days</div>
        </div>
        <div class="card stat-mini">
            <div class="stat-mini-value">@GetMoodCount(MoodCategory.Negative)</div>
            <div class="stat-mini-label">üòî Sad Days</div>
        </div>
        <div class="card stat-mini">
            <div class="stat-mini-value">@GetEntriesThisMonth()</div>
            <div class="stat-mini-label">Total Entries</div>
        </div>
    </div>
    }
</div>

<style>
    .calendar-page {
        max-width: 940px;
        animation: calendarFadeIn 0.5s cubic-bezier(0.25, 0.1, 0.25, 1) forwards;
    }
    
    @@keyframes calendarFadeIn {
        from {
            opacity: 0;
            transform: translateY(16px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .loading-skeleton {
        animation: skeletonFadeIn 0.3s ease;
    }
    
    @@keyframes skeletonFadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    
    .skeleton-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.25rem;
        padding: 0.5rem;
    }
    
    .skeleton-nav-btn {
        width: 100px;
        height: 40px;
        background: linear-gradient(90deg, #F1F5F9 25%, #E2E8F0 50%, #F1F5F9 75%);
        background-size: 200% 100%;
        animation: shimmer 1.5s infinite;
        border-radius: 10px;
    }
    
    .skeleton-month {
        width: 180px;
        height: 32px;
        background: linear-gradient(90deg, #F1F5F9 25%, #E2E8F0 50%, #F1F5F9 75%);
        background-size: 200% 100%;
        animation: shimmer 1.5s infinite;
        border-radius: 8px;
    }
    
    .skeleton-legend {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-bottom: 1.75rem;
    }
    
    .skeleton-legend-item {
        width: 80px;
        height: 24px;
        background: linear-gradient(90deg, #F1F5F9 25%, #E2E8F0 50%, #F1F5F9 75%);
        background-size: 200% 100%;
        animation: shimmer 1.5s infinite;
        border-radius: 6px;
    }
    
    .skeleton-calendar-grid {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        gap: 8px;
        background: var(--bg-white);
        padding: 1.75rem;
        border-radius: 16px;
        border: 1px solid var(--border-color);
    }
    
    .skeleton-calendar-cell {
        aspect-ratio: 1;
        background: linear-gradient(90deg, #F1F5F9 25%, #E2E8F0 50%, #F1F5F9 75%);
        background-size: 200% 100%;
        animation: shimmer 1.5s infinite;
        border-radius: 12px;
        min-height: 75px;
    }
    
    .skeleton-stats {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
        margin-top: 2rem;
    }
    
    .skeleton-stat {
        height: 100px;
        background: linear-gradient(90deg, #F1F5F9 25%, #E2E8F0 50%, #F1F5F9 75%);
        background-size: 200% 100%;
        animation: shimmer 1.5s infinite;
        border-radius: 16px;
    }
    
    @@keyframes shimmer {
        0% { background-position: 200% 0; }
        100% { background-position: -200% 0; }
    }
    
    .calendar-nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1.25rem;
        padding: 0.5rem;
    }
    
    .calendar-nav .btn-ghost {
        font-weight: 600;
        color: var(--text-secondary);
        padding: 0.625rem 1rem;
        border-radius: 10px;
        transition: background-color 0.2s ease, color 0.2s ease, transform 0.2s ease;
    }
    
    .calendar-nav .btn-ghost:hover {
        background: #F1F5F9;
        color: var(--primary-dark);
        transform: scale(1.02);
    }
    
    .calendar-nav .btn-ghost:active {
        transform: scale(0.98);
    }
    
    .current-month {
        font-size: 1.375rem;
        font-weight: 800;
        margin: 0;
        letter-spacing: -0.02em;
        background: linear-gradient(135deg, var(--text-heading) 0%, var(--text-secondary) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        transition: transform 0.3s ease;
    }
    
    .mood-legend {
        display: flex;
        gap: 2rem;
        margin-bottom: 1.75rem;
        justify-content: center;
        flex-wrap: wrap;
        animation: legendFadeIn 0.4s ease forwards;
        animation-delay: 0.15s;
        opacity: 0;
    }
    
    @@keyframes legendFadeIn {
        from { opacity: 0; transform: translateY(8px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .legend-item {
        display: flex;
        align-items: center;
        gap: 0.625rem;
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--text-secondary);
        transition: transform 0.2s ease;
    }
    
    .legend-item:hover {
        transform: scale(1.05);
    }
    
    .legend-dot {
        width: 18px;
        height: 18px;
        border-radius: 6px;
        box-shadow: 0 1px 3px rgba(15, 23, 42, 0.08);
        transition: transform 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
    }
    
    .legend-item:hover .legend-dot {
        transform: scale(1.15);
    }
    
    .legend-dot.mood-bg-happy {
        background: var(--primary-light);
        border: 1px solid var(--mood-happy-border);
    }
    
    .legend-dot.mood-bg-neutral {
        background: var(--mood-neutral-bg);
        border: 1px solid var(--mood-neutral-border);
    }
    
    .legend-dot.mood-bg-sad {
        background: var(--mood-sad-bg);
        border: 1px solid var(--mood-sad-border);
    }
    
    .legend-dot.no-entry {
        background: var(--bg-paper);
        border: 1px solid var(--border-color);
    }
    
    .calendar-container {
        padding: 1.75rem;
        background: var(--bg-white);
        animation: containerFadeIn 0.5s ease forwards;
        animation-delay: 0.2s;
        opacity: 0;
    }
    
    @@keyframes containerFadeIn {
        from { opacity: 0; transform: scale(0.98); }
        to { opacity: 1; transform: scale(1); }
    }
    
    .calendar-grid {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        gap: 8px;
    }
    
    .calendar-header-cell {
        padding: 0.875rem;
        text-align: center;
        font-size: 0.75rem;
        font-weight: 800;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.08em;
        background-color: transparent;
        border-radius: 8px;
    }
    
    .calendar-cell {
        aspect-ratio: 1;
        padding: 0.5rem;
        text-align: center;
        background: var(--bg-paper);
        border-radius: 12px;
        cursor: pointer;
        transition: transform 0.25s cubic-bezier(0.34, 1.56, 0.64, 1), 
                    box-shadow 0.25s ease,
                    background 0.2s ease,
                    border-color 0.2s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 75px;
        border: 2px solid transparent;
        position: relative;
    }
    
    .calendar-cell:hover:not(.empty) {
        transform: scale(1.1);
        box-shadow: 0 10px 24px rgba(15, 23, 42, 0.12);
        z-index: 1;
    }
    
    .calendar-cell:active:not(.empty) {
        transform: scale(1.02);
    }
    
    .calendar-cell.empty {
        background: transparent;
        cursor: default;
    }
    
    .calendar-cell.today {
        border-color: var(--primary);
        background: linear-gradient(135deg, #E8FDF0 0%, #D1FAE5 100%);
        box-shadow: 0 0 0 4px rgba(15, 216, 80, 0.12);
    }
    
    .calendar-cell.has-happy {
        background: var(--primary-light);
        border-color: #A7F3D0;
    }
    
    .calendar-cell.has-happy:hover {
        box-shadow: 0 10px 24px rgba(16, 185, 129, 0.18);
    }
    
    .calendar-cell.has-neutral {
        background: var(--mood-neutral-bg);
        border-color: #FDE68A;
    }
    
    .calendar-cell.has-neutral:hover {
        box-shadow: 0 10px 24px rgba(245, 158, 11, 0.18);
    }
    
    .calendar-cell.has-sad {
        background: var(--mood-sad-bg);
        border-color: #FECDD3;
    }
    
    .calendar-cell.has-sad:hover {
        box-shadow: 0 10px 24px rgba(244, 63, 94, 0.18);
    }
    
    .calendar-day {
        font-size: 0.9375rem;
        font-weight: 700;
        color: #475569;
        transition: color 0.2s ease;
    }
    
    .calendar-cell.today .calendar-day {
        color: var(--primary-dark);
    }
    
    .calendar-mood {
        font-size: 1.375rem;
        margin-top: 0.375rem;
        filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.1));
        transition: transform 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
    }
    
    .calendar-cell:hover .calendar-mood {
        transform: scale(1.25) rotate(-5deg);
    }
    
    .calendar-stats {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
        margin-top: 2rem;
    }
    
    .calendar-stats .stat-mini {
        text-align: center;
        padding: 1.5rem 1rem;
        background: var(--bg-white);
        position: relative;
        overflow: hidden;
        animation: statSlideIn 0.4s ease forwards;
        opacity: 0;
        transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1), box-shadow 0.25s ease;
    }
    
    .calendar-stats .stat-mini:nth-child(1) { animation-delay: 0.35s; }
    .calendar-stats .stat-mini:nth-child(2) { animation-delay: 0.4s; }
    .calendar-stats .stat-mini:nth-child(3) { animation-delay: 0.45s; }
    .calendar-stats .stat-mini:nth-child(4) { animation-delay: 0.5s; }
    
    @@keyframes statSlideIn {
        from { opacity: 0; transform: translateY(12px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .calendar-stats .stat-mini:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(15, 23, 42, 0.08);
    }
    
    .calendar-stats .stat-mini::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #0fd850 0%, #f9f047 100%);
        opacity: 0.06;
        border-radius: 50%;
        transform: translate(30%, -30%);
        transition: opacity 0.3s ease;
    }
    
    .calendar-stats .stat-mini:hover::before {
        opacity: 0.1;
    }
    
    .stat-mini-value {
        font-size: 2rem;
        font-weight: 800;
        background: linear-gradient(135deg, #0fd850 0%, #0bc045 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        transition: transform 0.3s ease;
    }
    
    .calendar-stats .stat-mini:hover .stat-mini-value {
        transform: scale(1.08);
    }
    
    .stat-mini-label {
        font-size: 0.8125rem;
        font-weight: 600;
        color: var(--text-secondary);
        margin-top: 0.375rem;
    }
    
    @@media (max-width: 640px) {
        .calendar-stats {
            grid-template-columns: repeat(2, 1fr);
        }
        
        .calendar-grid {
            gap: 4px;
        }
        
        .calendar-cell {
            min-height: 55px;
            border-radius: 8px;
        }
        
        .calendar-day {
            font-size: 0.8125rem;
        }
        
        .calendar-mood {
            font-size: 1.125rem;
        }
        
        .mood-legend {
            gap: 1rem;
        }
    }
</style>

@code {
    private DateTime currentDate = DateTime.Today;
    private string[] daysOfWeek = { "Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat" };
    private List<JournalEntry> _entries = new();
    private bool _isLoading = true;
    
    protected override async Task OnInitializedAsync()
    {
        await LoadEntriesAsync();
    }
    
    private async Task LoadEntriesAsync()
    {
        _isLoading = true;
        _entries = await JournalService.GetEntriesForMonthAsync(currentDate.Year, currentDate.Month);
        _isLoading = false;
    }
    
    private int GetFirstDayOffset()
    {
        var firstDay = new DateTime(currentDate.Year, currentDate.Month, 1);
        return (int)firstDay.DayOfWeek;
    }
    
    private int GetDaysInMonth()
    {
        return DateTime.DaysInMonth(currentDate.Year, currentDate.Month);
    }
    
    private JournalEntry? GetEntryForDate(DateTime date)
    {
        var dateOnly = DateOnly.FromDateTime(date);
        return _entries.FirstOrDefault(e => e.EntryDate == dateOnly);
    }
    
    private string GetMoodClass(JournalEntry entry)
    {
        return entry.PrimaryMood.Category switch
        {
            MoodCategory.Positive => "has-happy",
            MoodCategory.Neutral => "has-neutral",
            MoodCategory.Negative => "has-sad",
            _ => ""
        };
    }
    
    private int GetMoodCount(MoodCategory category)
    {
        return _entries.Count(e => e.PrimaryMood.Category == category);
    }
    
    private int GetEntriesThisMonth()
    {
        return _entries.Count;
    }
    
    private async Task PreviousMonth()
    {
        currentDate = currentDate.AddMonths(-1);
        await LoadEntriesAsync();
    }
    
    private async Task NextMonth()
    {
        currentDate = currentDate.AddMonths(1);
        await LoadEntriesAsync();
    }
    
    private void OnDayClick(DateTime date, JournalEntry? entry)
    {
        if (entry != null)
            NavigationManager.NavigateTo($"/editor/{entry.EntryId}");
        else if (date.Date <= DateTime.Today)
            NavigationManager.NavigateTo($"/editor?date={date:yyyy-MM-dd}");
    }
}
