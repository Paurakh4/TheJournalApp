@* TagInput Component - Input field for creating and managing tag chips *@

<div class="tag-input-container">
    <div class="selected-tags">
        @foreach (var tag in SelectedTags)
        {
            <span class="chip">
                @tag
                <button type="button" class="chip-remove" @onclick="() => RemoveTag(tag)">Ã—</button>
            </span>
        }
    </div>
    
    <div class="tag-input-wrapper">
        <input type="text" 
               class="form-input tag-input"
               placeholder="@Placeholder"
               @bind="inputValue"
               @bind:event="oninput"
               @onkeydown="HandleKeyDown" />
        
        @if (!string.IsNullOrWhiteSpace(inputValue) && FilteredSuggestions.Any())
        {
            <div class="tag-suggestions">
                @foreach (var suggestion in FilteredSuggestions)
                {
                    <button type="button" 
                            class="tag-suggestion" 
                            @onclick="() => AddTag(suggestion)">
                        @suggestion
                    </button>
                }
            </div>
        }
    </div>
</div>



@code {
    [Parameter]
    public List<string> SelectedTags { get; set; } = new();
    
    [Parameter]
    public EventCallback<List<string>> SelectedTagsChanged { get; set; }
    
    [Parameter]
    public List<string> AvailableTags { get; set; } = new()
    {
        "Work", "Personal", "Health", "Studies", "Family", 
        "Friends", "Hobbies", "Exercise", "Travel", "Goals"
    };
    
    [Parameter]
    public string Placeholder { get; set; } = "Add a tag...";
    
    [Parameter]
    public int MaxTags { get; set; } = 5;
    
    private string inputValue = "";
    
    private IEnumerable<string> FilteredSuggestions => 
        AvailableTags
            .Where(t => !SelectedTags.Contains(t) && 
                        t.Contains(inputValue, StringComparison.OrdinalIgnoreCase))
            .Take(5);
    
    private async Task AddTag(string tag)
    {
        if (SelectedTags.Count >= MaxTags) return;
        if (SelectedTags.Contains(tag)) return;
        
        SelectedTags.Add(tag);
        inputValue = "";
        await SelectedTagsChanged.InvokeAsync(SelectedTags);
    }
    
    private async Task RemoveTag(string tag)
    {
        SelectedTags.Remove(tag);
        await SelectedTagsChanged.InvokeAsync(SelectedTags);
    }
    
    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(inputValue))
        {
            var existingTag = AvailableTags.FirstOrDefault(t => 
                t.Equals(inputValue, StringComparison.OrdinalIgnoreCase));
            
            var tagToAdd = existingTag ?? inputValue.Trim();
            await AddTag(tagToAdd);
        }
    }
}
