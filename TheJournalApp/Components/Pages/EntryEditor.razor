</style>

@code {
    [Parameter]
    public int? EntryId { get; set; }
    
    [SupplyParameterFromQuery]
    public int? Mood { get; set; }
    
    [SupplyParameterFromQuery(Name = "date")]
    public string? DateParam { get; set; }
    
    private DateTime entryDate = DateTime.Today;
    private int selectedPrimaryMoodId = 0;
    private List<int> selectedSecondaryMoodIds = new();
    private string entryContent = "";
    private List<Tag> selectedTags = new();
    private string tagInput = "";
    
    private List<Mood> _allMoods = new();
    private List<Tag> _availableTags = new();
    private bool _isLoading = true;
    private int? _existingEntryId;

    protected override async Task OnInitializedAsync()
    {
        await JournalService.EnsureUserExistsAsync();
        _allMoods = await JournalService.GetAllMoodsAsync();
        _availableTags = await JournalService.GetAvailableTagsAsync();
        
        // Parse date parameter if provided
        if (!string.IsNullOrEmpty(DateParam) && DateOnly.TryParse(DateParam, out var parsedDate))
        {
            entryDate = parsedDate.ToDateTime(TimeOnly.MinValue);
            
            // Check if there's already an entry for this date
            var existingEntry = await JournalService.GetEntryByDateAsync(parsedDate);
            if (existingEntry != null)
            {
                _existingEntryId = existingEntry.EntryId;
                selectedPrimaryMoodId = existingEntry.PrimaryMoodId;
                entryContent = existingEntry.Content;
            }
        }
        
        if (EntryId.HasValue)
        {
            var entry = await JournalService.GetEntryByIdAsync(EntryId.Value);
            if (entry != null)
            {
                _existingEntryId = entry.EntryId;
                entryDate = entry.EntryDate.ToDateTime(TimeOnly.MinValue);
                selectedPrimaryMoodId = entry.PrimaryMoodId;
                selectedSecondaryMoodIds = entry.SecondaryMoods.Select(sm => sm.MoodId).ToList();
                entryContent = entry.Content;
                selectedTags = entry.EntryTags.Select(et => et.Tag).ToList();
            }
        }
        else if (Mood.HasValue)
        {
            selectedPrimaryMoodId = Mood.Value;
        }
        
        _isLoading = false;
    }
    
    private void ToggleSecondaryMood(int moodId)
    {
        if (selectedSecondaryMoodIds.Contains(moodId))
            selectedSecondaryMoodIds.Remove(moodId);
        else if (selectedSecondaryMoodIds.Count < 2)
            selectedSecondaryMoodIds.Add(moodId);
    }
    
    private IEnumerable<Tag> GetFilteredTags()
    {
        return _availableTags
            .Where(t => !selectedTags.Any(st => st.TagId == t.TagId) && 
                        t.Name.Contains(tagInput, StringComparison.OrdinalIgnoreCase))
            .Take(5);
    }
    
    private void AddTag(Tag tag)
    {
        if (selectedTags.Count < 5 && !selectedTags.Any(t => t.TagId == tag.TagId))
        {
            selectedTags.Add(tag);
            tagInput = "";
        }
    }
    
    private void RemoveTag(Tag tag)
    {
        selectedTags.RemoveAll(t => t.TagId == tag.TagId);
    }
    
    private async Task HandleTagKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(tagInput))
        {
            var existingTag = _availableTags.FirstOrDefault(t => 
                t.Name.Equals(tagInput, StringComparison.OrdinalIgnoreCase));
            
            if (existingTag != null)
                AddTag(existingTag);
            else
            {
                var newTag = await JournalService.CreateTagAsync(tagInput.Trim());
                _availableTags.Add(newTag);
                AddTag(newTag);
            }
        }
    }
    
    private void ApplyFormat(string format)
    {
        // Placeholder for text formatting
    }
    
    private void Cancel()
    {
        NavigationManager.NavigateTo("/");
    }
    
    private async Task SaveEntry()
    {
        if (selectedPrimaryMoodId == 0 || string.IsNullOrWhiteSpace(entryContent))
            return;
            
        await JournalService.SaveEntryAsync(
            _existingEntryId,
            selectedPrimaryMoodId,
            entryContent,
            selectedSecondaryMoodIds,
            selectedTags.Select(t => t.TagId).ToList(),
            DateOnly.FromDateTime(entryDate)
        );
        
        NavigationManager.NavigateTo("/");
    }
}
